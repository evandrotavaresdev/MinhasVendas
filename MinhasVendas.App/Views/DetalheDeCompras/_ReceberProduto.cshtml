
@model MinhasVendas.App.ViewModels.CarrinhoDeComprasViewModel

@{
    ViewData["Title"] = "Receber Produto";
}

<div class="modal-header">
    <h5 class="modal-title">@ViewData["Title"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div>
    <vc:resumo></vc:resumo>
</div>
<form asp-action="ReceberProduto">
    <input type="hidden" asp-for="@Model.DetalheDeCompra.Id" />
    <div class="modal-body">        
        <div class="form-group">
            <label asp-for="@Model.DetalheDeCompra.Produto.Nome" class="control-label"></label>
            <input readonly asp-for="@Model.DetalheDeCompra.Produto.Nome" class="form-control" />
        </div> 
        <div class="form-group">
            <label asp-for="@Model.DetalheDeCompra.Quantidade" class="control-label"></label>
            <input readonly asp-for="@Model.DetalheDeCompra.Quantidade" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.DetalheDeCompra.DataDeRecebimento" class="control-label"></label>
            <input asp-for="@Model.DetalheDeCompra.DataDeRecebimento" class="form-control" />
            <span asp-validation-for="@Model.DetalheDeCompra.DataDeRecebimento" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="@Model.DetalheDeCompra.RegistradoTransacaoDeEstoque" /> @Html.DisplayNameFor(model => model.DetalheDeCompra.RegistradoTransacaoDeEstoque)
            </label>
        </div>

   </div>
        
    <div class="modal-footer">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Receber Produto" class="btn btn-success" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        </div>
    </div>        

</form>



